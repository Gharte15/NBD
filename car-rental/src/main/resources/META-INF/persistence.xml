<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
      <class>Entities.Item</class>
      <class>Repositories.ClientRepository</class>
      <class>Repositories.ItemRepository</class>
      <class>Repositories.RentRepository</class>
      <class>Managers.ClientManager</class>
      <class>Managers.ItemManager</class>
      <class>Managers.RentManager</class>
      <class>Entities.Address</class>
      <class>Entities.Film</class>
      <class>Entities.Game</class>
      <class>Entities.Music</class>
      <class>Entities.Rent</class>
      <class>Entities.Client</class>
      <class>Entities.ClientType</class>
      <class>Entities.Normal</class>
      <class>Entities.Premium</class>
      <exclude-unlisted-classes>true</exclude-unlisted-classes>
      <shared-cache-mode>NONE</shared-cache-mode>
      <validation-mode>CALLBACK</validation-mode>
      <properties>
        <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:memory:target/RentDB;create=true"/>
        <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
        <property name="jakarta.persistence.jdbc.user" value="rent"/>
        <property name="jakarta.persistence.jdbc.password" value="rent"/>
        <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      </properties>
  </persistence-unit>
  <persistence-unit name="POSTGRES_RENT_PU" transaction-type="RESOURCE_LOCAL">
      <properties>
          <property name="jakarta.persistence.jdbc.driver " value="org.postgresql.Driver"/>
          <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
          <property name="jakarta.persistence.jdbc.user" value="nbd"/>
          <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
          <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
          <property name="hibernate.show_sql" value="true"/>
          <property name="hibernate.format_sql" value="true"/>
      </properties>
  </persistence-unit>
</persistence>
